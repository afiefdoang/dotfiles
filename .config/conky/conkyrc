background no
use_xft yes
xftfont Hack:size=7.5
xftalpha 0.1
update_interval 1
total_run_times 0
own_window 1 # 1 for i3wm compton / 1 for i3wm xcompmgr / yes for DE Gnome, XFCE
own_window_type override # override for i3wm, normal for GNOME, XFCE
own_window_transparent yes
own_window_class conky
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 0
double_buffer yes
minimum_size 100 5
maximum_width 200
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color #002B36
default_shade_color #002B36
default_outline_color #002B36
alignment top_left

gap_x 10
gap_y 20

stippled_borders 0
border_inner_margin 0
border_width 0

no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 1
override_utf8_locale yes
use_spacer left
text_buffer_size 256

own_window_color #002B36

own_window_colour 000000
TEXT

${voffset 0}
${font Hack:bold:size=8}${color #BCC3C3}SYSTEM INFO
$font${color #4a4a4a}$sysname $kernel ${alignr} $machine
Intel CORE i5-6300 ${alignr} ${freq_g cpu0}Ghz
Uptime ${alignr} ${uptime}
File System ${alignr} ${fs_type}

${font Hack:bold:size=8}${color #BCC3C3}MEMORY
$font${color #4a4a4a}MEM $mem / $memmax ${alignr} $memperc%
${membar 5,199}

${font Hack:bold:size=8}${color #BCC3C3}HDD
$font${color #4a4a4a}/ ${fs_used /} / ${fs_size /} ${alignr} ${fs_free_perc /}%
${fs_bar 5,199 /}

${font Hack:bold:size=8}${color #BCC3C3}NETWORKS
$font${color #4a4a4a}IP on wlp4s0 ${alignr} ${addr wlp4s0}
Down ${alignr} ${downspeed wlp4s0} kb/s
Up ${alignr} ${upspeed wlp4s0} kb/s

Downloaded: ${alignr} ${totaldown wlp4s0}
Uploaded: ${alignr} ${totalup wlp4s0}
${downspeedgraph wlp4s0 20,97 #4a4a4a #4a4a4a} ${upspeedgraph wlp4s0 20,97 #4a4a4a #4a4a4a}

${voffset -40}
${font Hack:bold:size=124}${color #4A7580}${time %H}
${voffset -250}
${font Hack:bold:size=124}${color #4A7580}${time %M}
${voffset -340}
${offset -4}${font Hack:bold:size=21}${color #4A7580}${time [%Y/%m/%d]}

